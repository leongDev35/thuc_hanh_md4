<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
            crossorigin="anonymous">
    <title>student HomePage</title>
</head>
<body>
    <div ><h2>Home</h2> <a href="/student/create" class="btn btn-primary ">Thêm Học Viên</a></div>
    <div >
        <div class="card-header">
            <div class="card">
                <table >
                    <thead>
                    </tr>
                    
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">
                            Tên</th>
                        <th scope="col">Lớp</th>
                        <th scope="col">Điểm Lý Thuyết</th>
                        <th scope="col">Đánh giá</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%if(students.length ==0){%>
                        <h2> No data</h2>
                    <%}%>
                    <% students.forEach((item, index)=>{ %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td>
                                <a href="/student/<%= item._id %>/detail"><%= item.name %></a></td>
                            <td><%= item.classroom.name %></td>
                            <td><%= item.pointTheory %></td>

                            <td><%= item.evaluated %></td>
                            <td>
                                <a href="/student/<%= item._id %>/update" class="btn btn-primary bg-light text-primary"> Sửa </a>
                                <a href="/student/<%= item._id %>/delete" class="btn btn-danger bg-light text-danger"
                                   onclick="return confirm('Chắc chắn xóa chứ?')"> Xóa </a>
                            </td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

<script
        src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
<script>
    function submitForm(){
        document.getElementById("formSubmitStudentByClass").submit()
    }
</script>
</html>